{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": [
        "src/app/*",
        "src/pages/*",
        "server/*",
        "public/*"
      ],
      "*": [
        "node_modules/*",
        "./*"
      ]
    },
    "isolatedModules": true,
    "typeRoots": [
      "./@types"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".next/types/**/*.ts",
    "@types/**/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
